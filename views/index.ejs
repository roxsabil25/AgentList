    <script>
        // Add some interactive animations
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effect to cards
            const cards = document.querySelectorAll('.card');
            
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                    this.style.boxShadow = '0 15px 35px rgba(0, 0, 0, 0.5)';
                    this.style.borderColor = 'var(--secondary-color)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.3)';
                    this.style.borderColor = 'rgba(212, 175, 55, 0.2)';
                });
            });
            
            // Add animation to CTA button
            const ctaButton = document.querySelector('.cta-button');
            
            ctaButton.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
                this.style.boxShadow = '0 6px 20px rgba(212, 175, 55, 0.6)';
            });
            
            ctaButton.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '0 4px 15px rgba(212, 175, 55, 0.4)';
            });
            
            // Create additional floating elements dynamically
            const animationsContainer = document.querySelector('.animations-container');
            
            for (let i = 0; i < 5; i++) {
                // Create additional playing cards
                const card = document.createElement('div');
                // card.className = 'playing-card';
                // card.textContent = ['A', 'K', 'Q', 'J', '10'][i];
                card.style.left = `${Math.random() * 90}%`;
                card.style.animationDelay = `${Math.random() * 15}s`;
                animationsContainer.appendChild(card);
                
                // Create additional cricket balls
                if (i < 3) {
                    const ball = document.createElement('div');
                    ball.className = 'cricket-ball';
                    ball.style.left = `${Math.random() * 90}%`;
                    ball.style.animationDelay = `${Math.random() * 12}s`;
                    animationsContainer.appendChild(ball);
                }
            }
            
            // Add scroll animations to timeline items
            const timelineItems = document.querySelectorAll('.timeline-item');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateX(0)';
                    }
                });
            }, { threshold: 0.1 });
            
            timelineItems.forEach((item, index) => {
                item.style.opacity = '0';
                if (index % 2 === 0) {
                    item.style.transform = 'translateX(-50px)';
                } else {
                    item.style.transform = 'translateX(50px)';
                }
                item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(item);
            });
        });
    </script>
