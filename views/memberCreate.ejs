<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Team Management - Bet Fair</title>

  <!-- TailwindCSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>
    /* Custom Styles */
    .gradient-bg {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    }
    
    .glass-effect {
      background: rgba(30, 41, 59, 0.7);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .agent-card {
      transition: all 0.3s ease;
      background: linear-gradient(145deg, #1e293b, #0f172a);
    }
    
    .agent-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3);
    }
    
    .status-online {
      background: #10b981;
      box-shadow: 0 0 10px #10b981;
    }
    
    .status-offline {
      background: #ef4444;
    }
    
    .contact-btn {
      transition: all 0.3s ease;
    }
    
    .contact-btn:hover {
      transform: scale(1.1);
    }
    
    .floating-action {
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
  </style>
</head>

<body class="gradient-bg min-h-screen text-white">
  <!-- Header -->
  <header class="glass-effect sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center">
            <i class="fas fa-dice text-white text-xl"></i>
          </div>
          <h1 class="text-2xl font-bold bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent">
            Bet Fair
          </h1>
        </div>
        
        <nav class="hidden md:flex space-x-6">
          <a href="#" class="hover:text-orange-400 transition-colors">Home</a>
          <a href="#" class="hover:text-orange-400 transition-colors">Admin</a>
          <a href="#" class="hover:text-orange-400 transition-colors">Super Agent</a>
          <a href="#" class="text-orange-400 font-semibold">Master Agent</a>
        </nav>
        
        <button class="md:hidden text-xl">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <!-- Page Title -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent">
        Team Management
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Add new team members and manage existing ones with our comprehensive team management system
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Add Member Form -->
      <div class="lg:col-span-1">
        <div class="glass-effect rounded-2xl p-6 sticky top-24">
          <div class="flex items-center space-x-3 mb-6">
            <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center floating-action">
              <i class="fas fa-user-plus text-white text-xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold">Add New Member</h3>
              <p class="text-gray-400 text-sm">Fill the form to add team member</p>
            </div>
          </div>

          <form action="/team/member/create" method="post" enctype="multipart/form-data" class="space-y-4">
            <!-- Name -->
            <div>
              <label class="block mb-2 font-semibold text-sm">Full Name *</label>
              <input type="text" name="name" required
                class="w-full px-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition" 
                placeholder="Enter full name">
            </div>

            <!-- Title -->
            <div>
              <label class="block mb-2 font-semibold text-sm">Title / Designation *</label>
              <input type="text" name="title" required
                class="w-full px-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                placeholder="e.g., Senior Agent">
            </div>

            <!-- Site Name -->
            <div>
              <label class="block mb-2 font-semibold text-sm">Site Name</label>
              <input type="text" name="sName"
                class="w-full px-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                placeholder="Website or platform name">
            </div>

            <!-- Experience -->
            <div>
              <label class="block mb-2 font-semibold text-sm">Experience</label>
              <input type="text" name="experience"
                class="w-full px-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                placeholder="e.g., 3+ years">
            </div>

            <!-- Social Media Links -->
            <div class="grid grid-cols-1 gap-4">
              <div>
                <label class="block mb-2 font-semibold text-sm">Facebook URL</label>
                <div class="relative">
                  <div class="absolute left-3 top-3 text-blue-500">
                    <i class="fab fa-facebook"></i>
                  </div>
                  <input type="url" name="facbook"
                    class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                    placeholder="https://facebook.com/username">
                </div>
              </div>

              <div>
                <label class="block mb-2 font-semibold text-sm">WhatsApp Number</label>
                <div class="relative">
                  <div class="absolute left-3 top-3 text-green-500">
                    <i class="fab fa-whatsapp"></i>
                  </div>
                  <input type="text" name="whatsapp"
                    class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                    placeholder="Number With Country Code..">
                </div>
              </div>

              <div>
                <label class="block mb-2 font-semibold text-sm">Messenger Link</label>
                <div class="relative">
                  <div class="absolute left-3 top-3 text-blue-400">
                    <i class="fab fa-facebook-messenger"></i>
                  </div>
                  <input type="url" name="massenger"
                    class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
                    placeholder="https://m.me/username">
                </div>
              </div>
            </div>

            <!-- Image Upload -->

            <div>
        <label class="block mb-1 font-semibold">Change Profile Image</label>
        <input type="file" name="img" accept="image/*"
          class="w-full text-sm text-gray-300 border border-gray-600 rounded-lg cursor-pointer bg-gray-700 focus:outline-none file:bg-orange-500 file:text-white file:px-3 file:py-2 hover:file:bg-orange-600" />
      </div>
            <!-- <div>
              <label class="block mb-2 font-semibold text-sm">Profile Image</label>
              <div class="border-2 border-dashed border-slate-600 rounded-xl p-4 text-center transition hover:border-orange-500">
                <input type="file" name="img" accept="image/*" 
                   id="fileInput">
                <label for="fileInput" class="cursor-pointer block">
                  <i class="fas fa-cloud-upload-alt text-3xl text-gray-400 mb-2"></i>
                  <p class="text-sm text-gray-400">Click to upload image</p>
                  <p class="text-xs text-gray-500 mt-1">PNG, JPG, WEBP up to 5MB</p>
                </label>
              </div>
            </div> -->

            <!-- Submit Button -->
            <button type="submit"
              class="w-full bg-gradient-to-r from-orange-500 to-yellow-500 hover:from-orange-600 hover:to-yellow-600 transition-all duration-300 py-4 rounded-xl font-bold text-white shadow-lg mt-6">
              <i class="fas fa-plus-circle mr-2"></i>
              Add Team Member
            </button>
          </form>
        </div>
      </div>

      <!-- Team Members Grid -->
      <div class="lg:col-span-2">
        <div class="glass-effect rounded-2xl p-6">
          <div class="flex justify-between items-center mb-8">
            <div>
              <h3 class="text-2xl font-bold">Team Members</h3>
              <p class="text-gray-400">All your team members in one place</p>
            </div>
            <div class="flex items-center space-x-4">
              <div class="relative">
                <input type="text" placeholder="Search members..." 
                  class="pl-10 pr-4 py-2 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition">
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
              </div>
              <select class="px-4 py-2 rounded-xl bg-slate-800 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition">
                <option>All Status</option>
                <option>Online</option>
                <option>Offline</option>
              </select>
            </div>
          </div>

          <!-- Agents Grid -->
          <div class="grid md:grid-cols-2 gap-6">
            <% agents.forEach(function(agent) { %>
              <div class="agent-card rounded-2xl p-6 border border-slate-700">
                <!-- Agent Header -->
                <div class="flex items-start space-x-4 mb-4">
                  <div class="relative">
                    <div class="w-16 h-16 rounded-2xl overflow-hidden border-2 border-orange-500">
                      <img src="<%= agent.img ? agent.img : 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=150&h=150&fit=crop&crop=face' %>" 
                           alt="<%= agent.name %>" 
                           class="w-full h-full object-cover">
                    </div>
                    <div class="absolute -bottom-1 -right-1 w-5 h-5 rounded-full border-2 border-slate-800 <%= agent.status === 'online' ? 'status-online' : 'status-offline' %>"></div>
                  </div>
                  
                  <div class="flex-1">
                    <div class="flex justify-between items-start">
                      <div>
                        <h4 class="font-bold text-lg"><%= agent.name %></h4>
                        <p class="text-orange-400 text-sm font-semibold"><%= agent.title %></p>
                      </div>
                      <span class="px-3 py-1 bg-slate-700 rounded-full text-xs font-medium">
                        ID: <%= agent.id %>
                      </span>
                    </div>
                    
                    <% if (agent.sName) { %>
                      <p class="text-gray-400 text-sm mt-2">
                        <i class="fas fa-globe mr-2"></i><%= agent.sName %>
                      </p>
                    <% } %>
                  </div>
                </div>

                <!-- Agent Details -->
                <div class="grid grid-cols-2 gap-4 mb-6">
                  <% if (agent.experience) { %>
                    <div class="text-center p-3 bg-slate-800 rounded-xl">
                      <div class="text-orange-400 font-bold text-lg"><%= agent.experience %></div>
                      <div class="text-gray-400 text-xs">Experience</div>
                    </div>
                  <% } %>
                  
                  <div class="text-center p-3 bg-slate-800 rounded-xl">
                    <div class="text-green-400 font-bold text-lg"><%= agent.status || 'Active' %></div>
                    <div class="text-gray-400 text-xs">Status</div>
                  </div>
                </div>

                <!-- Social Links -->
                <div class="flex justify-center space-x-4 mb-6">
                  <% if (agent.facebook) { %>
                    <a href="<%= agent.facebook %>" target="_blank" 
                       class="contact-btn w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center text-white hover:bg-blue-700">
                      <i class="fab fa-facebook-f"></i>
                    </a>
                  <% } %>
                  
                  <% if (agent.messenger) { %>
                    <a href="<%= agent.messenger %>" target="_blank" 
                       class="contact-btn w-12 h-12 bg-blue-400 rounded-xl flex items-center justify-center text-white hover:bg-blue-500">
                      <i class="fab fa-facebook-messenger"></i>
                    </a>
                  <% } %>
                  
                  <% if (agent.whatsapp) { %>
                    <a href="https://wa.me/<%= agent.whatsapp %>" target="_blank" 
                       class="contact-btn w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center text-white hover:bg-green-600">
                      <i class="fab fa-whatsapp"></i>
                    </a>
                  <% } %>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-3">
                  <a href="/edit/<%= agent._id %>" 
                     class="flex-1 bg-blue-600 hover:bg-blue-700 transition-colors py-3 rounded-xl text-center font-semibold">
                    <i class="fas fa-edit mr-2"></i>Edit
                  </a>
                  <a href="/delete/<%= agent._id %>" 
                     class="flex-1 bg-red-600 hover:bg-red-700 transition-colors py-3 rounded-xl text-center font-semibold">
                    <i class="fas fa-trash mr-2"></i>Delete
                  </a>
                </div>
              </div>
            <% }); %>
          </div>

          <!-- Empty State -->
          <% if (agents.length === 0) { %>
            <div class="text-center py-12">
              <div class="w-24 h-24 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-users text-3xl text-gray-500"></i>
              </div>
              <h4 class="text-xl font-bold text-gray-400 mb-2">No Team Members Yet</h4>
              <p class="text-gray-500">Add your first team member using the form on the left</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="glass-effect mt-12 border-t border-slate-700">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center">
        <div class="flex justify-center space-x-6 mb-4">
          <a href="#" class="text-gray-400 hover:text-orange-400 transition-colors">
            <i class="fab fa-facebook text-xl"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-orange-400 transition-colors">
            <i class="fab fa-twitter text-xl"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-orange-400 transition-colors">
            <i class="fab fa-instagram text-xl"></i>
          </a>
        </div>
        <p class="text-gray-500 text-sm">
          &copy; 2025 Bet Fair. All rights reserved. | Gamble responsibly
        </p>
      </div>
    </div>
  </footer>

  <script>
    // File upload preview
    document.getElementById('fileInput').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const label = this.parentElement;
        label.innerHTML = `
          <i class="fas fa-check text-green-500 text-3xl mb-2"></i>
          <p class="text-sm text-green-400">${file.name}</p>
          <p class="text-xs text-gray-500 mt-1">File selected</p>
        `;
      }
    });

    // Search functionality
    document.querySelector('input[placeholder="Search members..."]').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const cards = document.querySelectorAll('.agent-card');
      
      cards.forEach(card => {
        const name = card.querySelector('h4').textContent.toLowerCase();
        const title = card.querySelector('.text-orange-400').textContent.toLowerCase();
        const id = card.querySelector('span').textContent.toLowerCase();
        
        if (name.includes(searchTerm) || title.includes(searchTerm) || id.includes(searchTerm)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>